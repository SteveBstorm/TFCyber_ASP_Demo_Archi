@using ASP_Demo_Archi_DAL.Models
@model Movie
<form asp-action="Edit" class="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-control" >
       Id : <input type="text" asp-for="Id" readonly />
    </div>
    <div class="form-control">
        Titre : <input type="text" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>

    </div>
    <div class="form-control">
        Description : <input type="text" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    <div class="form-control">
        Réalisateur : 
        <select asp-for="RealisatorId">
            @foreach (Person p in (IEnumerable<Person>)TempData["ListPerson"])
            {
                <option value="@p.Id">@p.Firstname @p.Lastname</option>
            }
        </select>
        <span asp-validation-for="RealisatorId" class="text-danger"></span>

    </div>
    <div>
        <button type="submit" class="btn btn-sm btn-success">Valider</button>
    </div>
</form>